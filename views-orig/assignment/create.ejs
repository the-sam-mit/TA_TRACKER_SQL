<!doctype html>
<html>
<head>
	<title> Assignments</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />

	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body { padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
	<%	if(error && error.length>0){ %>
		<div class="container">
			<div class="alert alert-danger" role="alert">
				<h4><%= error %></h4>
			</div>
		</div>
	<%	} %>
	<% if(success && success.length>0){ %>	
		<div class="container">
			<div class="alert alert-success" role="alert">
				<h4><%= success %></h4>
			</div>
        </div>
	<%} %> 
	<% if(warning && warning.length>0){ %>	
		<div class="container">
			<div class="alert alert-warning" role="alert">
				<h4><%= warning %></h4>
			</div>
        </div>
	<%} %> 
	
	<div class="container mx-auto  " style="text-align: center; margin-top: 12%;background: #d5dde0;padding-left: 0px;padding-right: 0px;margin-left: 1px;margin-right: 0px">
		<h1>Add New Assignment</h1>
		<br>
		<%console.log("new as course:"+ course)%>
		<div style="width:30% ;margin:auto;">
			<form  action="/courses/<%=course.id%>/assignment/new" method="POST">
				<div class="form-group">
					<input class="form-control" placeholder="name" name="name" type="text">
				</div>
				<div class="form-group">
					<input class="form-control" placeholder="course" name="course" type="text" value="<%=course.name%>" fixed>
				</div>
				<div class="form-group">
					<label for="type">Type</label>
					<select name="Type" class="selectpicker"  data-live-search="true" id="type">
						<option>Theory</option>
						<option>Lab</option>
						<option>Project</option>
					</select>
				</div>
				<div class="form-group">
					<label for="deadlineRubriks">deadlineRubriks</label>
					<input class="form-control" placeholder="deadlineRubriks" name="deadlineRubriks" type="datetime-local" id="deadlineRubriks" min="<%-current_datetime%>" value="<%-current_datetime%>" >
				</div>
				<div class="form-group">
					<label for="deadlineEvaluation">deadlineEvaluation</label>
					<input class="form-control" placeholder="deadlineEvaluation" name="deadlineEvaluation" type="datetime-local" id="deadlineEvaluation" min="<%-current_datetime%>" value="<%-current_datetime%>">

				</div>
				<div class="form-group">
					<label for="assignedTA">Assigned TA</label>
					<select name="assignedTA" class="selectpicker" multiple data-live-search="true" id="assignedTA">
					<%asisstant.forEach(function(data){ %>
						<option value="<%=data.Tid%>"><%=data.username%></option>
					<% }) %>
					</select>
				</div>
				<button class="btn btn-md btn-primary btn-block">Create</button>
			</form>
		</div>
		<br>
		<%console.log("SCS" +current_datetime)%>
		<a href="/courses/<%=course.id%>"><button class="btn " style="background: #b4b8ab">back</button></a>
	</div>

	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
	<script type="text/javascript"
     src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.min.js">
    </script>
	<script>
		$('#assignedTA').selectpicker();
		

	</script>


</body>
</html>
