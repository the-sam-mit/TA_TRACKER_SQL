<!doctype html>
<html>
<head>
	<title> Assignments EDIT</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />

	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body { padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
	<%	if(error && error.length>0){ %>
		<div class="container">
			<div class="alert alert-danger" role="alert">
				<h4><%= error %></h4>
			</div>
		</div>
	<%	} %>
	<% if(success && success.length>0){ %>	
		<div class="container">
			<div class="alert alert-success" role="alert">
				<h4><%= success %></h4>
			</div>
        </div>
	<%} %> 
	<% if(warning && warning.length>0){ %>	
		<div class="container">
			<div class="alert alert-warning" role="alert">
				<h4><%= warning %></h4>
			</div>
        </div>
	<%} %> 
	
	<div class="container mx-auto  " style="text-align: center; margin-top: 12%;background: #d5dde0;padding-left: 0px;padding-right: 0px;margin-left: 1px;margin-right: 0px">
		<h1>Update Assignment Details</h1>
		<br>
		<div style="width:30% ;margin:auto;">
			<form  action="/courses/<%=CID%>/assignment/<%=assignment_data.id%>/update" method="POST">
				<div class="form-group">
					<label for="name">Name</label>
					<input class="form-control" placeholder="name" name="name" type="text" id="name" value="<%=assignment_data.name%>">
				</div>
				<div class="form-group">
					<label for="deadlineRubriks">deadlineRubriks</label>
					<input class="form-control" placeholder="deadlineRubriks" name="deadlineRubriks" type="datetime-local" id="deadlineRubriks"  value="<%=assignment_data.deadline_rubriks.toISOString().slice(0,-5)%>">
				</div>
				<div class="form-group">
					<label for="deadlineEvaluation">deadlineEvaluation</label>
					<input class="form-control" placeholder="deadlineEvaluation" name="deadlineEvaluation" type="datetime-local" id="deadlineEvaluation" min="<%=assignment_data.deadline_rubriks.toISOString().slice(0,-5)%>" value="<%=assignment_data.deadline_eval.toISOString().slice(0,-5)%>">

				</div>
				<button class="btn btn-md btn-primary btn-block">Update</button>
			</form>
		</div>
		<br>
	</div>

	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
	<script type="text/javascript"
     src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.min.js">
    </script>


</body>
</html>
